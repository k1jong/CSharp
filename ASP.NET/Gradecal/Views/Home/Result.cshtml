
@{
    ViewData["Title"] = "Result";
}
@model Grade

@{
    double result = 0;
    result += (int)Model.Kor;
    result += (int)Model.Eng;
    result += (int)Model.Math;
    result += (int)Model.Sci;
    result += (int)Model.His;
    result /= 5;
    double result2 = result / 100 * 4.5;
}
<h1>Result</h1>

<h3>국어 : @Model.Kor</h3>
<h3>영어 : @Model.Eng</h3>
<h3>수학 : @Model.Math</h3>
<h3>과학 : @Model.Sci</h3>
<h3>사회 : @Model.His</h3>
<h3>100점 평균 : @result</h3>
<h3>4.5점 평균 : @result2</h3>

